<%= form_for @poll, html: {class: 'form-horizontal'} do |f| %>
  <div class="control-group">
    <%= f.label :title, class: 'control-label' %>
    <%= f.text_field :title %>
  </div>
  <div class="control-group">
    <%= label_tag 'Submit to', nil, class: 'control-label' %>
    <%= select_tag :eventable_id, options_from_collection_for_select(current_user.groups, :id, :name) %>
  </div>
  <div class="control-group">
    <%= label_tag :effect, nil, class: 'control-label'%>
    <%= select_tag :effect, options_for_select(Poll.all_polls) %>
  </div>
  <div class="control-group">
    <%= label_tag :subject, nil, class: 'control-label'%>
    <%= select_tag :subject, options_for_select(Poll.all_polls) %>
  </div>

    <div class="controls">
      <%= f.submit nil, class: 'btn' %>
    </div>
  </div>
<% end %>
