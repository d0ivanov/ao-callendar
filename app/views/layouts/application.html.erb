<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Ao Callendar" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Ao Callendar" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>" style="padding-top:0px;">
    <!--<div class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </div>-->
    <div id="main" role="main">
      <div class="container-fluid">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%= render 'layouts/messages' %>
                <% if user_signed_in? %>
                  <ul class="nav nav-tabs nav-design">
                    <li>
                      <div class="btn-group" style="padding-right: 10px;">
                        <a class="btn dropdown-toggle btn-info" data-toggle="dropdown" href="#">
                          <i class="icon-list"></i>
                          <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                          <li>
                          <%= link_to 'Edit account', edit_user_registration_path %>
                          </li>
                          <li>
                          <%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %>
                          </li>
                        </ul>
                      </div>
                    </li>
                    <li><a href="<%= root_path %>"><i class="icon-home icon-white"></i></a></li>
                    <%current_user.groups.each do |group| %>
                      <li><%= link_to group.name, group_path(group) %></li>
                    <% end %>
                  </ul>
                <% end %>
              <%= yield %>
            </div>
          </div>
          <footer>
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>
